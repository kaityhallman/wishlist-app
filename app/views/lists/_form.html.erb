<%= simple_form_for(@list, html: {class: 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>
  <%= f.input :name %>
  <%= f.input :category, label: "Category", placeholder: 'Category' %>
  <%= f.input :price, placeholder: "$" %>
  <%= f.input :size, placeholder: "Small | Medium | Large" %>
  <%= f.input :color, placeholder: "Color" %>
  <%= f.input :priority, collection: 1..5 %>
<% end %>
<%= simple_form_for(@list, html: {class: 'form-inline'}) do |f| %>
  <%= f.input :remote_image_url, label: "URL" %>
  <%= f.file_field :image %>
  <br>
  <%= f.button :submit, class: "btn btn-primary" %>  | <%= link_to 'Back', lists_path, class: "btn btn-primary" %>
  <% end %>